<div class="container-xxl flex-grow-1 container-p-y">
	<div class="row">
		<div class="col-lg-8 mb-4 order-0">
			<div class="card">
				<div class="d-flex align-items-end row">
					<div class="col-sm-7">
						<div class="card-body">
							<h5 class="card-title text-primary">Welcome Back <%= current_account.first_name.present? ? current_account.first_name : current_account.username %>! ðŸŽ‰</h5>
							<p class="mb-4">
								Today is a brand new oppotunity to do more
							</p>
						</div>
					</div>
					<div class="col-sm-5 text-center text-sm-left">
						<div class="card-body pb-0 px-0 px-md-4">
							<%= image_tag "img/illustrations/man-with-laptop-light.png", height: 140, alt: "Badge user" %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4 col-md-4 order-1">
			<div class="row">
				<div class="col-lg-6 col-md-12 col-6 mb-4">
					<div class="card">
						<div class="card-body">
							<div class="card-title d-flex align-items-start justify-content-between">
								<div class="avatar flex-shrink-0">
									<i class='menu-icon fs-2 fw-bold bx bxs-graduation'></i>
								</div>
							</div>
							<span class="fw-semibold d-block mb-1">Section</span>
							<h3 class="card-title mb-2">2024/2025</h3>
						</div>
					</div>
				</div>
				<div class="col-lg-6 col-md-12 col-6 mb-4">
					<div class="card">
						<div class="card-body">
							<div class="card-title d-flex align-items-start justify-content-between">
								<div class="avatar flex-shrink-0">
									<i class='menu-icon fs-2 fw-bold bx bxs-graduation'></i>
								</div>
							</div>
							<span class="fw-semibold d-block mb-1">Semester</span>
							<h3 class="card-title text-nowrap mb-1">1st</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Total Revenue -->
		<div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
			<div class="card">
				<div class="row row-bordered g-0">
					<div class="col-md-8">
						<h5 class="card-header m-0 me-2 pb-3">Exam Timetable</h5>
					</div>
				</div>
			</div>
		</div>
		<!--/ Total Revenue -->
		<div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
			<div class="row">
				<div class="col-6 mb-4">
					<div class="card">
						<div class="card-body">
							<div class="card-title d-flex align-items-start justify-content-between">
								<div class="avatar flex-shrink-0">
									<i class='menu-icon fs-2 fw-bold bx bxs-graduation'></i>
								</div>
							</div>
							<span class="fw-semibold d-block mb-1">Year of Study</span>
							<h3 class="card-title text-nowrap mb-2">2nd</h3>
						</div>
					</div>
				</div>
				<div class="col-6 mb-4">
					<div class="card">
						<div class="card-body">
							<div class="card-title d-flex align-items-start justify-content-between">
								<div class="avatar flex-shrink-0">
									<i class='menu-icon fs-2 fw-bold bx bx-badge-check'></i>
								</div>
							</div>
							<span class="fw-semibold d-block mb-1">Account Status</span>
							<% if current_account.status == "pending" %>
								<h5 class="card-title mb-2"><span class="badge bg-warning">Pending</span></h5>
							<% else %>
								<h5 class="card-title mb-2"><span class="badge bg-primary">Verified</span></h5>
							<% end %>
						</div>
					</div>
				</div>
				<!-- </div>
    <div class="row"> -->
				<div class="col-12 mb-4">
					<div class="card">
						<div class="card-header d-flex align-items-center justify-content-between">
							<h5 class="card-title m-0 me-2">Next Exams</h5>
						</div>
						<div class="card-body">
							<ul class="p-0 m-0">
								<% if @exams.present? %>
									<% @exams.each do |exam| %>
										<li class="d-flex mb-4 pb-1">
											<div class="card-boxi flex-shrink-0 me-3 text-center" style="width: 60px;">
												<h3 class="mb-0"><%= exam.date.strftime('%d') %></h3>
												<small class="text-muted fw-bold"><%= exam.date.strftime('%b').upcase %></small>
											</div>
											<div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
												<div class="me-2">
													<h6 class="mb-0 fw-bold"><%= exam.course.course_code %></h6>
													<small class="text-dark d-block mb-1"><%= truncate(exam.course.course_title, length: 40) %></small>
													<small class="text-muted"><%= exam.start_time.strftime('%I:%M%P') %> - <%= exam.end_time.strftime('%I:%M%P') %></small>
												</div>
											</div>
										</li>
									<% end %>
								<% else %>
									No Upcoming Exams
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
